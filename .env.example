# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/medical_inventory?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Gemini AI Configuration
GEMINI_API_KEY="your-gemini-api-key-here"

# Environment
NODE_ENV="development"

# ============================================
# Audit System Configuration
# ============================================

# Audit Signing Secret (for tamper-proof logs)
# Generate with: openssl rand -base64 32
AUDIT_SIGNING_SECRET="your-audit-signing-secret-here-generate-with-openssl"

# Audit Queue Configuration (optional - for non-blocking logging)
# If not provided, audit logging will be synchronous
AUDIT_QUEUE_REDIS_URL="redis://localhost:6379"

# ============================================
# Backup System Configuration
# ============================================

# Backup Storage Path (server-side directory for backup files)
BACKUP_STORAGE_PATH="/var/backups/mais-inventory"

# Backup Encryption Key (for encrypted backups)
# Generate with: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key-here-generate-with-openssl"

# Maximum Backup Storage (in GB)
BACKUP_MAX_STORAGE_GB="100"

# ============================================
# Report System Configuration
# ============================================

# Report Storage Path (server-side directory for generated reports)
REPORT_STORAGE_PATH="/var/reports/mais-inventory"

# ============================================
# Email/SMTP Configuration
# ============================================

# SMTP Server Configuration (for backup/report notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@mais-inventory.com"
SMTP_FROM_NAME="Saudi Mais Inventory System"

# Email Recipients for System Notifications
ADMIN_EMAIL="admin@mais-inventory.com"

# ============================================
# Cron/Scheduling Configuration
# ============================================

# Timezone for scheduled tasks (default: Asia/Riyadh)
CRON_TIMEZONE="Asia/Riyadh"

# ============================================
# Security Configuration
# ============================================

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE="60"

# Session Timeout (in minutes)
SESSION_TIMEOUT="30"

# Maximum Login Attempts
MAX_LOGIN_ATTEMPTS="5"

# ============================================
# Feature Flags
# ============================================

# Enable/Disable Features
ENABLE_AUDIT_SYSTEM="true"
ENABLE_BACKUP_SYSTEM="true"
ENABLE_REPORT_SYSTEM="true"
ENABLE_AI_INSIGHTS="true"

# ============================================
# Development/Debug Configuration
# ============================================

# Debug Mode (set to "true" for verbose logging)
DEBUG_MODE="false"

# Log Level (error, warn, info, debug)
LOG_LEVEL="info"
